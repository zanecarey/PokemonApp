<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation">

    <fragment
        android:id="@+id/navigation_main"
        android:name="zane.carey.pokemonapp.ui.HomeScreen.HomeScreenFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_main_screen">
        <action
            android:id="@+id/action_navigation_main_to_navigation_pokedex"/>
    </fragment>

    <fragment
        android:id="@+id/navigation_pokedex"
        android:name="zane.carey.pokemonapp.ui.PokemonSearch.PokemonSearchFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_pokedex" >
        <action
            android:id="@+id/action_navigation_pokedex_to_navigation_dashboard"
            app:destination="@id/navigation_dashboard" />
    </fragment>
</navigation>