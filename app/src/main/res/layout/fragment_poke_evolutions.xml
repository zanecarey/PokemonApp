<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            android:focusable="true"
            app:cardBackgroundColor="@color/blue">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="8dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/baseEvolutionTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Base Species"
                    android:gravity="center"
                    android:textSize="32sp" />

                <ImageView
                    android:id="@+id/baseEvoImage"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center">

                </ImageView>

                <TextView
                    android:id="@+id/firstEvolutionTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="First Evolution"
                    android:gravity="center"
                    android:textSize="32sp" />

                <ImageView
                    android:id="@+id/firstEvoImage"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center">

                </ImageView>

                <TextView
                    android:id="@+id/secondEvolutionTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Second Evolution"
                    android:gravity="center"
                    android:textSize="32sp" />

                <ImageView
                    android:id="@+id/secondEvoImage"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center">

                </ImageView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>